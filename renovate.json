{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchDatasources": [
        "docker"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".github/workflows/release.yml$"
      ],
      "matchStrings": [
        "tags: loeken/plex:(?<currentValue>[\\d\\.\\-a-zA-Z]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/plex",
      "versioningTemplate": "semver"
    }
  ]
}
