{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["docker"]
    }
  ],
  "docker": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": [".github/workflows/release.yml$"],
      "matchStrings": [
        "tags: loeken/plex:(?<currentValue>[\\d.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "linuxserver/plex",
      "versioningTemplate": "docker"
    }
  ]
}